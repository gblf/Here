<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.here.imdetails.ImDetailsActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="@color/white"
        android:id="@+id/tb_im_details"
        android:paddingBottom="7dp"
        android:elevation="7dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <TextView
            android:id="@+id/tv_details_name"
            android:textColor="@color/share_text"
            android:layout_gravity="center"
            android:textSize="@dimen/tool_bar_title"
            android:text="@string/activity_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_details_head"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:textColor="@color/share_text"
                    android:id="@+id/tv_details_nickname"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/tv_publisher_time"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="35dp"
                    android:background="@drawable/tv_follow_bg"
                    android:id="@+id/tv_details_follow"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:text="+ 关注"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:id="@+id/tv_details_address"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_details_kind"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_details_over"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_details_count"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_details_describe"
                android:textColor="@color/share_text"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12sp"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="6dp"
                android:id="@+id/rv_im_details"
                android:layout_marginRight="12sp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_details_apply"
                android:textColor="@color/white"
                android:text="申请"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
