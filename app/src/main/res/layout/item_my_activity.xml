<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginRight="10dp"
    app:cardElevation="6dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_item_activity_head"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_item_activity_name"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/cv_item_activity_head"
                android:textColor="@color/share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_activity_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/cv_item_activity_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_activity_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textColor="@color/share_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/cv_item_activity_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_item_activity_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="85dp"
                android:layout_toRightOf="@id/cv_item_activity_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>