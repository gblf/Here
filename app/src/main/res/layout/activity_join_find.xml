<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.here.follow.join.JoinFindActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:paddingBottom="7dp"
        android:elevation="7dp"
        android:id="@+id/tb_join_find"
        android:background="@color/theme_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <TextView
            android:layout_gravity="center"
            android:text="发现设置"
            android:textSize="@dimen/tool_bar_title"
            android:layout_marginLeft="@dimen/setting_margin_left"
            android:textColor="@color/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:text="@string/find_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dingmouren.paletteimageview.PaletteImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:id="@+id/palette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:palettePadding="20dp"
        app:paletteSrc="@drawable/add_image"
        app:paletteOffsetX="15dp"
        app:paletteOffsetY="15dp"
        />

</LinearLayout>
