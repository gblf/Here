<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="false"
    tools:context="com.here.personal.other.OtherInfoActivity">
    <com.here.view.UnfoldAndZoomScrollView
        android:id="@+id/uz_other_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@color/image_bg"
                android:layout_marginTop="-60dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/iv_other_info_bg"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_bg_height"/>
            <LinearLayout
                android:background="@color/theme_color"
                android:layout_marginTop="180dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@color/theme_color"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_other_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/account"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <TextView
                        android:id="@+id/tv_other_nickname"
                        android:text="木头人"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:layout_marginLeft="65dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:id="@+id/iv_other_age"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/age"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height"/>
                    <TextView
                        android:id="@+id/tv_other_age"
                        android:layout_toRightOf="@+id/iv_other_age"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:id="@+id/iv_other_sex_tips"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/sex"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <ImageView
                        android:id="@+id/iv_other_sex"
                        android:layout_toRightOf="@+id/iv_other_sex_tips"
                        android:src="@drawable/woman"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:id="@+id/iv_other_address"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/address"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <TextView
                        android:id="@+id/tv_other_address"
                        android:layout_toRightOf="@+id/iv_other_address"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_tips"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/setting_item_height"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/tips"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_other_tips"
                        android:layout_marginLeft="55dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/birthday"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <TextView
                        android:id="@+id/tv_other_birthday"
                        android:textSize="16sp"
                        android:layout_marginLeft="65dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_introduction"
                    android:minHeight="@dimen/setting_item_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/introducation"
                        android:layout_width="21dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="65dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_other_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/phone"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <TextView
                        android:id="@+id/tv_other_phone"
                        android:textSize="16sp"
                        android:layout_marginLeft="65dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/email"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <TextView
                        android:id="@+id/tv_other_email"
                        android:textSize="16sp"
                        android:layout_marginLeft="65dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <RelativeLayout
                    android:background="@drawable/item_message_selector"
                    android:id="@+id/rl_publisher_cord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/publish_record"
                        android:layout_width="@dimen/item_image_height"
                        android:layout_height="@dimen/item_image_height" />
                    <TextView
                        android:text="他的发布"
                        android:textSize="16sp"
                        android:layout_marginLeft="65dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/part_linear_color"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <RelativeLayout
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_contract_other"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:background="@drawable/button_bg"
                            android:text="打招呼"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"/>
                        <Button
                            android:id="@+id/btn_accusation_other"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_delete"
                            android:text="举报"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"/>
                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_fill_color="@color/image_bg"
                android:id="@+id/iv_other_head"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp"
                android:layout_marginTop="130dp"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/personal_head_length"
                android:layout_height="@dimen/personal_head_length" />
        </RelativeLayout>


    </com.here.view.UnfoldAndZoomScrollView>
    <RelativeLayout
        android:id="@+id/rl_tool_bar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <android.support.v7.widget.Toolbar
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/tb_other_personal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">
            <TextView
                android:id="@+id/tv_other_title"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="用户信息"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>



</RelativeLayout>
